<%= form_with(model: gossip) do |form| %>

<div class="card" style="margin: 0 auto; width: 18rem; text-align: center;">
	<br>
	<h4>Create your Idea</h4>
	<br>
  <form action="/gossips/new">
    <div class="form-group">
    	<h5>Your name :</h5>
      <%= form.text_field :anonymous_author, placeholder:"Anonym Author", label: "Auteur anonyme", label_class:"form_label" %>
    </div>
	<br>
    <div class="field">
    	<h5>Tell us something cool :</h5>
      <%= form.text_field :content, placeholder:"Idea", label: "Idea", label_class:"form_label" %>
    </div>
    <br>
	<% user_id = session[:user_id] %>
      <%= form.button :submit, class:"bg-success btn btn-treehouse" %>
  </form>
</div>
<% end %>