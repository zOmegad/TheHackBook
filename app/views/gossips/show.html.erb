<br>
<div style="text-align: center; font-size: 20px; margin: 0 auto; width: 50%;">
	<div class="card">
	  	<div class="card-header">
			<div class="card-body">
				<p class="card-text">
	  				<strong>Username:</strong>
					<%= @gossip.anonymous_author %>
				</p>

				<p class="card-text">
					<strong>Content:</strong>
					<%= @gossip.content %>
				</p>
			</div>
			  <%= link_to 'Edit', edit_gossip_path(@gossip)%>
			  <%= link_to 'Comment', new_gossip_comment_path(@gossip), class: "bg-warning btn btn-treehouse" %>

	   </div>
	</div>
</div>

<% for comment in @comments.where(gossip_id: @gossip.id) %>
  <br>
	<div class="card" style="text-align: center; margin: 0 auto; width: 50%;"> 
		<div class="card">
			<div class="card-header">
				<div class="card-body">
					<p class="card-text">
						<strong>Author:</strong>
						<%= comment.anonymous_commentor %>
						<br>
						<strong>Content:</strong>
						<%= comment.content %>
					</p>
					<%= link_to 'Reply', new_gossip_comment_reply_path(@gossip, comment), class: "bg-warning btn btn-treehouse" %>
					<%= link_to 'Edit', edit_gossip_comment_path(comment), class: "bg-warning btn btn-treehouse"%>
					<%= link_to 'Destroy', gossip_comment_path(@gossip, comment.id), method: :delete %> 
					<div style="border-top: ridge;">

						<% for reply in @replies.where(comment_id: comment.id) %>
						<%= reply.anonymous_replier %>
						<br>
						<%= reply.content %>
						<%end%>

					</div>
			   </div>
			</div>
		</div>
	</div>
	<br>
<% end %>