<h1>Home#index</h1>

<% if current_user %>
  Logged in as <%= current_user.email %>.
  <%= link_to "Log Out", session_url(current_user), method: :delete %>
<% else %>
  <%= link_to "Sign Up", new_user_url %> or 
  <%= link_to "Log In", new_session_url %>
<% end %>

<p style="color: green" id="notice"><%= notice %></p>

<% Gossip.all.each do |gossip| %>
<div>
<div class="card" style="text-align: center; margin: 0 auto; width: 50%;">
  	<div class="card-header">
    	Gossip <%= gossip.id %>
  	</div>
  <div class="card-body">
    	<p class="card-text"><%= gossip.anonymous_author %></p>
    	<p class="card-text text"><%= gossip.content %></p>
  	</div>
  <%= link_to 'Show', gossip %>
  <div class="card-body">
  	<!-- Condition ternaire -->
  	<p style="" class="card-text text">
  		<%= "#{Comment.where(gossip_id: gossip.id).count} #{(Comment.where(gossip_id: gossip.id).count > 1) ? "commentaires" : "commentaire"}" %>
  			
  		</p>
  </div>
	</div>
</div>
<br>
<% end %>